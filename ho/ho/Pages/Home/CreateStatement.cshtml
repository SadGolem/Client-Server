    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Type</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Type" value="@Model.statementInfo.Type">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Date</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Date" value="@Model.statementInfo.Date">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">FIO</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="FIO" value="@Model.statementInfo.FIO">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Location</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Location" value="@Model.statementInfo.Location">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">UUID</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="UUID" value="@Model.statementInfo.UUID">
        </div>
    </div>

    @if (Model.succsessMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.succsessMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }
    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Accept</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
        </div>
    </div>
    
</form>