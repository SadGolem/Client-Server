@page
@model ho.Pages.Home.ProfileModel
@{
}
<br>
<h2> Profile </h2>
<a class='btn btn-primary btn-sm' href='CreateProfile'>New Profile</a>
<table class="table">

    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.listProfile)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Name</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="EditProfile?id=@item.ID">Edit</a>
                    <a class="btn btn-primary btn-sm" href="DeleteProfile?id=@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>