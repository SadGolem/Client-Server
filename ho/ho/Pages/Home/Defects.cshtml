@page
@model ho.Pages.Home.DefectsModel
@{
}
<br>
<h2> Defect Type </h2>
<a class='btn btn-primary btn-sm' href='CreateDefects'>New Defect</a>
<table class="table">

    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.listDefects)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Name</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="EditDefect?id=@item.ID">Edit</a>
                    <a class="btn btn-primary btn-sm" href="DeleteDefect?id=@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>